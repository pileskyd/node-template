{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "useTabs": true,
        "printWidth": 120,
        "tabWidth": 1,
        "semi": true,
        "singleQuote": true,
        "proseWrap": "preserve"
      }
    ],
    "no-unused-vars": "off",
    "no-explicit-any": "off",
    "ban-untagged-todo": "error"
  },
  "overrides": [
    {
      "files": [
        "src/**/*.{js,ts}"
      ],
      "excludedFiles": "*.test.js"
    }
  ]
}